<project>
  <pomVersion>3</pomVersion>
  <extend>${ledgeCommon}/project.xml</extend>
  <!-- project info -->

  <groupId>objectledge</groupId>
  <id>ledge-lgpl</id>
  <currentVersion>0.3.1</currentVersion>
  <name>Ledge LGPL</name>
  <shortDescription>A collection of components that depend on third party LGPL licensed code.</shortDescription>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.rng</include>
        </includes>
      </resource>
    </resources>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.rng</include>
            <include>**/*.sql</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
