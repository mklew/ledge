<project>
  <pomVersion>3</pomVersion>
  <extend>${ledgeCommon}/project.xml</extend>
  <!-- project info -->

  <groupId>objectledge</groupId>
  <id>ledge-gpl</id>
  <currentVersion>${versions.ledge}</currentVersion>
  <name>Ledge GPL</name>
  <shortDescription>A collection of components that depend on third party GPL licensed code.</shortDescription>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.rng</include>
        </includes>
      </resource>
    </resources>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.rng</include>
            <include>**/*.sql</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
  <dependencies>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-components</artifactId>
      <version>${versions.ledge}</version>
      <url>http://objectledge.org/modules/ledge-components/</url>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <url>http://logging.apache.org/log4j/docs/</url>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picocontainer</artifactId>
      <version>1.1</version>
      <url>http://picocontainer.org/</url>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-api</artifactId>
      <version>1.1-rc2</version>
      <url>http://dna.codehaus.org</url>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-impl</artifactId>
      <version>1.1-rc2</version>
      <url>http://dna.codehaus.org</url>
    </dependency>
    <dependency>
      <groupId>xmlrpc</groupId>
      <artifactId>xmlrpc</artifactId>
      <version>2.0</version>
      <url>http://ws.apache.org/xmlrpc/</url>
    </dependency>

    <!-- test -->
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.3</version>
    </dependency>
    <dependency>
      <groupId>relaxngDatatype</groupId>
      <artifactId>relaxngDatatype</artifactId>
      <version>20040506</version>
      <url>https://sourceforge.net/projects/relaxng</url>
    </dependency>
    <dependency>
      <groupId>isorelax</groupId>
      <artifactId>isorelax</artifactId>
      <version>20040506</version>
      <url>https://msv.dev.java.net/</url>
    </dependency>
  </dependencies>
  <versions>
    <version>
      <id>0.3</id>
      <name>0.3</name>
      <tag>RELEASE-0_3</tag>
    </version>
  </versions>
</project>
