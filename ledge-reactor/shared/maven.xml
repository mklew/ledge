<project xmlns:j="jelly:core"
         xmlns:ant="jelly:ant">
  <postGoal name="xdoc:register-reports">
    <j:set var="changelogs" value="ledge.changelogs"/>
    <j:if test="${changelogs}">
	  <attainGoal name="maven-statcvs-plugin:register"/>
    </j:if>
    <attainGoal name="maven-linkcheck-plugin:deregister"/>
    <attainGoal name="maven-pmd-plugin:register"/>
    <attainGoal name="maven-simian-plugin:register"/>
    <attainGoal name="maven-findbugs-plugin:register"/>
  </postGoal>
</project>         