<project>
  <pomVersion>3</pomVersion>
  
  <extend>../ledge-common/project.xml</extend>

  <!-- project info -->
  
  <groupId>objectledge</groupId>
  <id>ledge-reactor</id>
  <currentVersion>0.3-dev</currentVersion>
  
  <name>ObjectLedge</name>
  <shortDescription>Object Ledge - documentation package.</shortDescription>
  <description>
    Object Ledge is a platform for building applications in Java 2 Standard and Enterprise Edition 
    environments. 
    
    ObjectLedge follows component / container and Inversion Of Control design paradigms 
    implemented with the excelent <a href="http://picocontainer.org">PicoContainer</a> package.

    ObjectLedge provides a number of components - basic building blocks of the applications,
    a few extensions to the Pico framework, customized containers for easy deployment of
    applications in command line, daemon, and J2EE servlet environments.    
  </description>
  <reports>   
    <report>maven-license-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-statcvs-plugin</report>
    <report>maven-faq-plugin</report>    
    <report>maven-multiproject-plugin</report>
    <report>maven-dashboard-plugin</report>
    <report>maven-multichanges-plugin</report>
    <!-- <report>maven-jira-plugin</report> -->
  </reports>
  <dependencies>
    <dependency>
      <type>plugin</type>
      <groupId>statcvs</groupId>
      <artifactId>maven-statcvs-plugin</artifactId>
      <version>2.5</version>
    </dependency>  
    <dependency>
      <type>plugin</type>
      <groupId>findbugs</groupId>
      <artifactId>maven-findbugs-plugin</artifactId>
      <version>0.7.2</version>
    </dependency>  
  </dependencies>
</project>
