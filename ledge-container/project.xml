<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- $Id: project.xml,v 1.17 2004-01-29 14:01:07 fil Exp $ -->
<project>
  <pomVersion>3</pomVersion>
  
  <extend>../ledge-reactor/shared/project.xml</extend>

  <!-- project info -->
  
  <groupId>objectledge</groupId>
  <id>ledge-container</id>
  <currentVersion>0.2-dev</currentVersion>
  <name>Ledge Container</name>
  <shortDescription>
    A container based on Pico/Nano packages with added value of more expressive
    composition file syntax, and providing  components with XML based schema checked 
    configuration and externally configured loggers.
  </shortDescription>

  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.rng</include>
        </includes>
      </resource>
    </resources>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.rng</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
  
  <dependencies>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-components</artifactId>
      <version>SNAPSHOT</version>
      <url>http://objectledge.org/modules/ledge-components/</url>
    </dependency>
    <dependency>
      <groupId>jing</groupId>
      <artifactId>jing</artifactId>
      <version>20030619</version>
      <url>http://www.thaiopensource.com/relaxng/jing.html</url>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <url>http://jakarta.apache.org/log4j/docs/index.html</url>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picocontainer</artifactId>
      <version>1.0-SNAPSHOT</version>
      <url>http://picocontainer.org/</url>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picoextras-reflection</artifactId>
      <version>1.0-alpha-1-SNAPSHOT</version>
      <url>http://picocontainer.org/picoextras</url>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picoextras-script</artifactId>
      <version>1.0-alpha-1-SNAPSHOT</version>
      <url>http://picocontainer.org/picoextras</url>
    </dependency>
    <dependency>
      <groupId>nanocontainer</groupId>
      <artifactId>nanocontainer</artifactId>
      <version>1.0-alpha-1-SNAPSHOT</version>
      <url>http://nanocontainer.org/</url>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-api</artifactId>
      <version>1.1-rc2</version>
      <url>http://dna.jcontainer.org</url>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-impl</artifactId>
      <version>1.1-rc2</version>
      <url>http://dna.jcontainer.org</url>
    </dependency>
    <dependency>
      <groupId>spice</groupId>
      <artifactId>spice-cli</artifactId>
      <version>1.0</version>
      <url>http://spice.sourceforge.net</url>
    </dependency>
    <!-- runtime -->
  </dependencies>
  
</project>
