<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- $Id: project.xml,v 1.8 2003-12-09 12:40:52 fil Exp $ -->
<project>
  <pomVersion>3</pomVersion>
  
  <extend>../ledge-reactor/shared/project.xml</extend>

  <!-- project info -->
  
  <groupId>objectledge</groupId>
  <id>ledge-container</id>
  <currentVersion>0.1-dev</currentVersion>
  <name>Ledge Container</name>
  <shortDescription>Object Ledge - container package.</shortDescription>
  <description>
    This module contains a Pico-based Type 3 IoC container.
  </description>

  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.rng</include>
        </includes>
      </resource>
    </resources>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <unitTest>
      <excludes>
        <exclude>**/AllTests.java</exclude>
        <exclude>**/ComponentsTests.java</exclude>
        <exclude>**/*Component.java</exclude>
      </excludes>
      <resources>
        <resource>
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.rng</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
  
  <dependencies>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-components</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>jing</groupId>
      <artifactId>jing</artifactId>
      <version>20030619</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picocontainer-1.0</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picoextras-reflection</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picoextras-script</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-api</artifactId>
      <version>1.1-rc2</version>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-impl</artifactId>
      <version>1.1-rc2</version>
    </dependency>
    <!-- runtime -->
    <dependency>
      <groupId>saxon</groupId>
      <artifactId>saxon</artifactId>
      <version>6.5.3</version>
    </dependency>
  </dependencies>
  
</project>
