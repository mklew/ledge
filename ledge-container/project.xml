<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id: project.xml,v 1.29 2004-09-03 13:33:09 rafal Exp $ -->

<project>
  <pomVersion>3</pomVersion>
  <extend>../ledge-common/project.xml</extend>
  <!-- project info -->

  <groupId>objectledge</groupId>
  <id>ledge-container</id>
  <currentVersion>0.3</currentVersion>
  <name>Ledge Container</name>
  <shortDescription>A container based on Pico/Nano packages with added value of more expressive composition file syntax, and providing components with XML based schema checked configuration and externally configured loggers.</shortDescription>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.rng</include>
        </includes>
      </resource>
    </resources>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.rng</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
  <dependencies>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-components</artifactId>
      <version>SNAPSHOT</version>
      <url>http://objectledge.org/modules/ledge-components/</url>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <url>http://logging.apache.org/log4j/docs/</url>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picocontainer</artifactId>
      <version>1.0-ledge-1</version>
      <url>http://picocontainer.org/</url>
    </dependency>
    <dependency>
      <groupId>nanocontainer</groupId>
      <artifactId>nanocontainer</artifactId>
      <version>1.0-beta-1.pico-1.0</version>
      <url>http://nanocontainer.org/</url>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-api</artifactId>
      <version>1.1-rc2</version>
      <url>http://dna.codehaus.org</url>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-impl</artifactId>
      <version>1.1-rc2</version>
      <url>http://dna.codehaus.org</url>
    </dependency>
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.0</version>
      <url>http://jakarta.apache.org/commons/cli/</url>
    </dependency>
    <dependency>
      <groupId>msv</groupId>
      <artifactId>msv</artifactId>
      <version>20040506</version>
      <url>https://msv.dev.java.net/</url>
    </dependency>
    <dependency>
      <groupId>isorelax</groupId>
      <artifactId>isorelax</artifactId>
      <version>20040506</version>
      <url>https://msv.dev.java.net/</url>
    </dependency>
    <dependency>
      <groupId>relaxngDatatype</groupId>
      <artifactId>relaxngDatatype</artifactId>
      <version>20040506</version>
      <url>https://sourceforge.net/projects/relaxng</url>
    </dependency>
    <!-- runtime -->

    <dependency>
      <groupId>xsdlib</groupId>
      <artifactId>xsdlib</artifactId>
      <version>20040506</version>
      <url>https://msv.dev.java.net/</url>
    </dependency>
  </dependencies>
  <versions>
    <version>
      <id>0.3</id>
      <name>0.3</name>
      <tag>RELEASE-0_3</tag>
    </version>
  </versions>
</project>
