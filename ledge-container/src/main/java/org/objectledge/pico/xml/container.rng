<grammar xmlns="http://relaxng.org/ns/structure/1.0" 
  xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0" 
  datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">

  <start>
    <ref name="container"/>
  </start>
  
  <define name="container">
    <element name="container">
      <ref name="attlist.container"/>
      <optional>
        <ref name="adapter-factory"/>
      </optional>
      <zeroOrMore>
        <choice>
          <ref name="component"/>
          <ref name="pseudo-component"/>
          <ref name="container"/>
        </choice>
      </zeroOrMore>
    </element>
  </define>

  <define name="attlist.container" combine="interleave">
    <optional>
      <attribute name="front-end"/>
    </optional>  
    <optional>
      <attribute name="adapter-factory"/>
    </optional>  
    <optional>
      <choice>
        <attribute name="key"/>
        <attribute name="class-key"/>
      </choice>
    </optional>  
    <optional>
      <attribute name="class"/>
    </optional>  
    <optional>
      <attribute name="replace" a:defaultValue="false">
        <choice>
          <value>false</value>
          <value>true</value>
        </choice>
      </attribute>
    </optional>  
  </define>

  <define name="adapter-factory">
    <element name="adapter-factory">
      <attribute name="class"/>
      <optional>
        <ref name="adapter-factory"/>
      </optional>
    </element>
  </define>

  <define name="component">
    <element name="component">
       <ref name="attlist.component"/>
       <zeroOrMore>
         <ref name="parameter"/>
       </zeroOrMore>
    </element>
  </define>

  <define name="attlist.component" combine="interleave">
    <attribute name="class"/>
    <optional>
      <choice>
        <attribute name="key"/>
        <attribute name="class-key"/>
      </choice>
    </optional>
    <optional>
      <attribute name="preload" a:defaultValue="false">
        <choice>
          <value>false</value>
          <value>true</value>
        </choice>
      </attribute>
    </optional>  
  </define>

  <define name="parameter">
    <choice>
      <ref name="constant-parameter"/>
      <ref name="component-parameter"/>
      <ref name="sequence-parameter"/>
    </choice>
  </define>
  
  <define name="constant-parameter">
    <element name="constant-parameter">
      <optional>
        <attribute name="class"/>
      </optional>
      <attribute name="value"/>
    </element>
  </define>
  
  <define name="component-parameter">
    <element name="component-parameter">
      <optional>
        <choice>
          <attribute name="key"/>
          <attribute name="class-key"/>
        </choice>
      </optional>
    </element>
  </define>
  
  <define name="sequence-parameter">
    <element name="sequence-parameter">
      <zeroOrMore>
        <ref name="parameter"/>
      </zeroOrMore>
    </element>
  </define>
  
  <define name="pseudo-component">
    <element name="pseudo-component">
      <attribute name="factory"/>
      <ref name="any-element"/>
    </element>
  </define>
  
  <define name="any-element">
    <element>
      <anyName/>
      <zeroOrMore>
        <choice>
          <attribute>
            <anyName/>
          </attribute>
          <text/>
          <ref name="any-element"/>
        </choice>
      </zeroOrMore>
    </element>
  </define>  
</grammar>	 
