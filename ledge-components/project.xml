<project>
  <pomVersion>3</pomVersion>
  
  <extend>../ledge-reactor/shared/project.xml</extend>

  <!-- project info -->
  
  <groupId>objectledge</groupId>
  <id>ledge-components</id>
  <currentVersion>0.1-dev</currentVersion>
  
  <name>Ledge Components</name>
  <shortDescription>Object Ledge - components package.</shortDescription>
  <description>
    This module contains a set of reusable Type 3 IoC compatible components.
  </description>
  
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <unitTest>
      <excludes>
        <exclude>**/AllTests.java</exclude>
        <exclude>**/ComponentsTests.java</exclude>
      </excludes>
    </unitTest>
  </build>
  
  <dependencies>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-api</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>jing</groupId>
      <artifactId>jing</artifactId>
      <version>20030619</version>
    </dependency>
  </dependencies>
</project>
