<project>

  <extend>../ledge-common/project.xml</extend>

  <!-- project info -->
  
  <groupId>objectledge</groupId> 
  <id>ledge-maven-plugin</id>
  <currentVersion>0.3-dev</currentVersion>
  <name>Ledge Maven plugin</name>
  <shortDescription>A plugin for the Maven build tool useful in development of Ledge based applications.</shortDescription>
  
  <!-- dependencies -->
  
  <dependencies>
    <dependency>
      <groupId>commons-jelly</groupId>
      <artifactId>commons-jelly-tags-velocity</artifactId>
      <version>20030303.205659</version>
    </dependency>
    <dependency>
      <id>velocity</id>
      <version>1.4</version>
    </dependency>
  </dependencies>

  <!-- build -->
  <build>
    <resources>
      <resource>
        <directory>src/plugin-resources</directory>
        <targetPath>plugin-resources</targetPath>
      </resource>
      <resource>
        <includes>
          <include>plugin.*</include>
          <include>project.xml</include>
        </includes>
      </resource>
    </resources>
  </build>

  <reports>
    <report>maven-license-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-tasklist-plugin</report>
    <report>maven-faq-plugin</report>    
  </reports>

</project>