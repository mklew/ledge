      <groupId>dna</groupId>
      <artifactId>dna-impl</artifactId>
      <version>1.1-rc2</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
      <url>http://dna.codehaus.org</url>
    </dependency>
    <dependency>
      <groupId>msv</groupId>
      <artifactId>msv</artifactId>
      <version>20040506</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
      <url>https://msv.dev.java.net/</url>
